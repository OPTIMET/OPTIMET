<simulation>
  <harmonics nmax="3" />
</simulation>

<source type="planewave">
  <wavelength value="1460" />
  <propagation theta="90" phi="90" />
  <polarization Etheta.real="0.70710678118" Etheta.imag="0.0"
    Ephi.real="0.0" Ephi.imag="-0.70710678118"/>
</source>

<geometry>
  <structure type="spiral" arms="3">
    <object type="sphere">
      <properties radius="250.0" />
      <epsilon type="relative" value.real="13.0" value.imag="0." value="13.0"/>
      <mu type="relative" value.real="1.0" value.imag="0.0" value="1e0"/>
    </object>
    <properties points="5" distance="600.0" normal="y" />
  </structure>
</geometry>

<output type="field">
  <grid type="cartesian">
    <x min="-2000" max="2000" steps="10" />
    <y min="-0.1" max="0.1" steps="2" />
    <z min="-2000" max="2000" steps="10" />
  </grid>
</output>
